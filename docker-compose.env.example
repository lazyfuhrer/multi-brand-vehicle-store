# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
DB_NAME=vehicle_store
DB_USER=postgres
DB_PASSWORD=postgres
# DB_PORT=5433  # Optional: Uncomment in docker compose.yml and set here if you need external database access

# Django Backend Configuration
SECRET_KEY=secret-key
DEBUG=True
ADMIN_TOKEN=your-admin-token-here

# Backend Port
BACKEND_PORT=8000

# Frontend Configuration
FRONTEND_PORT=5173
VITE_API_BASE_URL=http://localhost:8000/api

# Note: In production, update VITE_API_BASE_URL to point to your backend domain
# Example: VITE_API_BASE_URL=https://api.yourdomain.com/api
